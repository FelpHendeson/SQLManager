<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SQLManager | Admin</title>
    <style>
      :root {
        color-scheme: light;
        font-family: "Inter", system-ui, sans-serif;
      }

      body {
        margin: 0;
        background: #f5f5f7;
        color: #1b1b1f;
      }

      header {
        background: #141425;
        color: white;
        padding: 24px 32px;
      }

      main {
        padding: 32px;
        display: grid;
        gap: 24px;
      }

      .card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 8px 24px rgba(20, 20, 37, 0.08);
      }

      button {
        border: none;
        background: #b71c1c;
        color: white;
        padding: 12px 16px;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 600;
      }

      .tag {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 999px;
        font-size: 12px;
        background: #efeefe;
        color: #5a4bd1;
        margin-right: 6px;
      }

      a {
        color: #5a4bd1;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>SQLManager</h1>
      <p>Área do desenvolvedor</p>
    </header>

    <main>
      <section class="card">
        <h2>Operações master</h2>
        <form action="/admin/scripts/clear" method="post">
          <button type="submit">Limpar todos os scripts</button>
        </form>
        <p><a href="/">&larr; Voltar ao dashboard</a></p>
      </section>

      <section class="card">
        <h2>Scripts armazenados (visualização crua)</h2>
        <% if (scripts.length === 0) { %>
        <p>Nenhum script encontrado.</p>
        <% } %>
        <ul>
          <% scripts.forEach((script) => { %>
          <li>
            <span class="tag"><%= script.databaseName %></span>
            <strong><%= script.fileName %></strong>
            (<%= script.id %>)
            <a href="/scripts/<%= script.id %>">abrir</a>
          </li>
          <% }) %>
        </ul>
      </section>
    </main>
  </body>
</html>
